<div class="container-fluid">
    <div class="row d-flex flex-row">
        <div class="col-10 m-0 p-0">
            <h3 class="p-2" style="user-select: none;"><%= categoryContent[0].category %></h3>
        </div>
        <div class="col-2 d-flex justify-content-end align-items-center m-0 p-0">
            <a href="/category/<%= categoryContent[0].category %>" class="text-dark">
                <h5>View all</h5>
            </a>
        </div>
    </div>
</div>


<div class="card-deck">

    <!-- looping through all the blogs of a category -->
    <% categoryContent.forEach(blog => { %>
    <div class="card">
        <a href="/category/<%= blog.category %>/<%= blog._id %>">
            <div class="wrapper bg-dark" style="width: 100%;height: 200px;">
                
                <img class = "img-responsive" style="width: inherit;height: inherit;" src="/<%= blog.image%>" alt="Card image">
            </div>
            <div class="card-body p-2 w-auto h-auto">
                <p class="card-text">
                    <%- blog.body.substring(0, 150)+"..."%>
                </p>
            </div>
        </a>
    </div>
    <% }); %>
</div>

<br>